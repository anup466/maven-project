pipeline
{
agent any
stages
{
stage('scm checkout')
{
steps{
git branch: 'master', url: 'https://github.com/ssjoshi123/maven-project'
}
}
stage('package')
		{
		steps{
		withMaven(jdk: 'localjdk', maven: 'localmaven'){
		sh 'mvn package'
		archiveArtifacts 'webapp/target/*.war'
                hygieiaArtifactPublishStep artifactDirectory: 'webapp/target', artifactGroup: 'prinpal.com', artifactName: '*.war', artifactVersion: '1.0-SNAPSHOT'
                hygieiaDeployPublishStep applicationName: 'Product1', artifactDirectory: 'webapp/target', artifactGroup: 'prinpal.com', artifactName: '*.war', artifactVersion: '1.0-SNAPSHOT', buildStatus: 'InProgress', environmentName: 'Dev'
		}
		}
		}
stage('deploy to tomcat')
{
steps{
sshagent(['tomcat2']) {
    sh 'scp -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/Pipeline-job/webapp/target/*.war  ec2-user@172.31.74.73:/usr/share/tomcat/webapps/'
    hygieiaArtifactPublishStep artifactDirectory: '/usr/share/tomcat/webapps', artifactGroup: 'prinpal.com', artifactName: '*.war', artifactVersion: ''
    hygieiaDeployPublishStep applicationName: 'Liberty', artifactDirectory: '/usr/share/tomcat/webapps', artifactGroup: 'prinpal.com', artifactName: '*.war', artifactVersion: '', buildStatus: 'InProgress', environmentName: 'DEV'
		
}
}
}
}
}

