pipeline
{
	agent any
	stages
	{
		stage('scm checkout')
		{
		steps{
		git branch: 'master', url: 'https://github.com/ssjoshi123/maven-project'
		
		}
		}
		stage('validate code')
		{
		steps{
		withMaven(jdk: 'localjdk-1.8', maven: 'local maven') {
		sh 'mvn validate'
		}
		}
		}
		stage('compile code')
		{
		steps{
		withMaven(jdk: 'localjdk-1.8', maven: 'local maven'){
		sh 'mvn compile'
		}
		}
		}
		stage('test code')
		{
		steps{
		withMaven(jdk: 'localjdk-1.8', maven: 'local maven'){
		sh 'mvn test'}
		}
		}
	
	}
}
