pipeline
{
agent any
stages
{
stage('scm checkout')
{
steps{
git branch: 'master', url: 'https://github.com/ssjoshi123/maven-project'
}
}
stage('package')
		{
		steps{
		withMaven(jdk: 'localjdk', maven: 'localmaven'){
		sh 'mvn package'}
		}
		}
stage('maven sonar')
{
steps{
withSonarQubeEnv('sonar'){
withMaven(jdk: 'localjdk', maven: 'localmaven'){

sh 'mvn package sonar:sonar'

}
}
}
}
stage('deploy to tomcat')
{
steps{
sshagent(['tomcat2']) {
    sh 'scp -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/Pipeline-job/webapp/target/*.war  ec2-user@172.31.74.73:/usr/share/tomcat/webapps/'
}
}
}
stage('publish to Hygieia')
{
steps{
archiveArtifacts 'target/*.war'
hygieiaArtifactPublishStep artifactDirectory: './target', artifactGroup: 'test', artifactName: '*.war', artifactVersion: ''
hygieiaDeployPublishStep applicationName: 'Application1', artifactDirectory: './target', artifactGroup: 'prinpal.com', artifactName: '*.war', artifactVersion: '', buildStatus: 'InProgress', environmentName: 'Dev'
}
}
}
}
